<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de lista para períodos -->
        <record id="view_tcu_periodo_tree" model="ir.ui.view">
            <field name="name">tcu.periodo.tree</field>
            <field name="model">tcu.periodo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="anio"/> 
                    <field name="fecha_inicio"/>
                    <field name="fecha_final"/>
                    <field name="activo"/>
                    <field name="total_estudiantes" readonly="1"/>
                    <field name="estudiantes_aprobados" readonly="1"/>
                    <field name="estudiantes_pendientes" readonly="1"/> 
                </tree>
            </field>
        </record>

        <!-- Vista de formulario para períodos -->
        <record id="view_tcu_periodo_form" model="ir.ui.view">
            <field name="name">tcu.periodo.form</field>
            <field name="model">tcu.periodo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="Ej: Primer Semestre 2025"/>
                                <field name="anio" widget="radio"/>
                                <field name="activo"/>
                            </group>
                            <group>
                                <field name="fecha_inicio"/>
                                <field name="fecha_final"/>
                            </group>
                        </group>
                        <group string="Estadísticas">
                            <group>
                                <field name="total_estudiantes" readonly="1"/>
                                <field name="estudiantes_aprobados" readonly="1"/>
                            </group>
                            <group>
                                <field name="estudiantes_pendientes" readonly="1"/>
                            </group>
                        </group> 
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para periodos -->
        <record id="action_tcu_periodo" model="ir.actions.act_window">
            <field name="name">Períodos de TCU</field>
            <field name="res_model">tcu.periodo</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
